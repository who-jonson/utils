{
  "name": "@whoj/utils-monorepo",
  "description": "Collection of common JS / TS helpers/utils by @whoj",
  "version": "1.7.5",
  "private": true,
  "license": "MIT",
  "keywords": [
    "typescript",
    "ts",
    "starter"
  ],
  "scripts": {
    "lint": "eslint \"packages/**/*.{js,ts,tsx,vue}\" --fix",
    "stub": "pnpm -r run stub",
    "build": "pnpm -r run prepublishOnly",
    "build:types": "rm -rf dist && vue-tsc -p tsconfig.build.json --declaration --emitDeclarationOnly --composite false",
    "play": "vite --config ./playground/vite.config.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "release": "bumpp package.json packages/*/package.json --commit --push --tag && pnpm -r publish --access public"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.1",
    "@testing-library/vue": "^7.0.0",
    "@types/fs-extra": "^11.0.1",
    "@types/is-glob": "^4.0.2",
    "@types/node": "^18.17.18",
    "@types/throttle-debounce": "^5.0.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitest/ui": "^0.34.5",
    "@whoj/eslint-config": "^1.5.0",
    "@whoj/utils": "workspace:^",
    "@whoj/utils-core": "workspace:^",
    "@whoj/utils-types": "workspace:^",
    "@whoj/utils-vue": "workspace:^",
    "bumpp": "^9.1.1",
    "c8": "^8.0.0",
    "change-case": "^4.1.2",
    "core-js": "^3.31.0",
    "cross-env": "^7.0.3",
    "dot-prop": "^8.0.0",
    "esbuild": "^0.19.3",
    "esbuild-register": "^3.4.2",
    "eslint": "8.49.0",
    "eslint-plugin-testing-library": "^6.0.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "esno": "^0.17.0",
    "fast-glob": "^3.2.12",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.24",
    "rimraf": "^5.0.1",
    "rollup": "^3.25.1",
    "rollup-plugin-dts": "^6.0.2",
    "rollup-plugin-esbuild": "^6.0.1",
    "rollup-plugin-node-externals": "^6.1.1",
    "rollup-plugin-postcss": "^4.0.2",
    "scule": "^1.0.0",
    "throttle-debounce": "^5.0.0",
    "tsup": "^7.2.0",
    "typescript": "^5.1.3",
    "unbuild": "^2.0.0",
    "unplugin": "^1.3.1",
    "vite": "^4.3.9",
    "vite-plugin-dts": "^3.5.4",
    "vitest": "^0.34.5",
    "vue": "^3.3.4",
    "vue-demi": "^0.14.5",
    "vue-tsc": "^1.6.5"
  },
  "pnpm": {
    "allowedDeprecatedVersions": {
      "stable": "*"
    },
    "overrides": {
      "vue-demi": "$vue-demi",
      "typescript": "$typescript",
      "sourcemap-codec": "npm:@jridgewell/sourcemap-codec@^1.4.14"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@vue/compiler-sfc",
        "rollup"
      ]
    }
  },
  "packageManager": "pnpm@8.7.6",
  "author": {
    "name": "Jonson B.",
    "email": "www.jbc.bd@gmail.com",
    "url": "https://who-jonson.github.io"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  }
}
